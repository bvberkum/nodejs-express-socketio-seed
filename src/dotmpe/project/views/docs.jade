extends ../../express-seed/views/layouts/base


block main

  form
    .form-group
      label Path
      input(name='docpath', value=docpath).form-control
    .form-group
      label Format
      select(name='format')
        option(value="xml") XML
        option(value="pseudoxml") Pseudo XML (plain text)
        option(value="html") HTML
        option(value="source") Source (reStructuredText)

block content

  .row.form-group
    iframe#viewer.form-control

block footer

  p.text-muted.credit Express MVC - Project - Documents


