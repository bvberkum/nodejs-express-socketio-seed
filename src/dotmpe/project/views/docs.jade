  link(rel="import", href="/components/polymer-paper-dropdown/polymer-paper-dropdown.html")
  link(rel="import", href="/components/html5-paper-input/html5-paper-input.html")

block wrap_epilogue
  // start after page #wrap and container and create window-wide chrome for
  // doc viewer

  //core-header-panel.span-md-12
  //  core-toolbar
  //    div Hello World!

  form
    .form-group
      html5-paper-input( name='docpath', dismisslabel, value=docpath,
        required, pattern="[A-Za-z-][0-9A-Za-z_\.-]*", label='Path' ).col-md-9

    .form-group
      //paper-dropdown-menu(label="Format")
      //  paper-dropdown.dropdown(name='format')
      //    paper-menu.menu
      //      paper-item(value="html") HTML
      //      paper-item(value="pseudoxml") Pseudo XML (plain text)
      //      paper-item(value="source") Source (reStructuredText)
      //      paper-item(value="xml") XML

      Label.col-md-1 Format
      .col-md-2
        select.form-control(name='format')
          option(value="html") HTML
          option(value="pseudoxml") Pseudo XML (plain text)
          option(value="source") Source (reStructuredText)
          option(value="xml") XML

  iframe#viewer.form-control

block footer
  p.text-muted.credit.small Express MVC - Project - Documents


